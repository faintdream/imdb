<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/someid"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/votesTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/starIconIV"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_below="@id/textView2"
            android:layout_toEndOf="@+id/starIconIV"
            android:layout_toRightOf="@+id/starIconIV"
            android:text="(0.0/100) voted by 1542, users " />

        <ImageView
            android:id="@+id/posterIV"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/textView2"
            android:layout_toEndOf="@+id/posterIV"
            android:layout_toRightOf="@+id/posterIV"
            android:text="Popularity : " />

        <TextView
            android:id="@+id/releasedateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/movieNameTV"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:text="somedate date" />

        <TextView
            android:id="@+id/movieNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/posterIV"
            android:layout_toRightOf="@+id/posterIV"
            android:text="movieAdapter @string/app_name" />

        <ImageView
            android:id="@+id/starIconIV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView4"
            android:layout_toEndOf="@+id/posterIV"
            android:layout_toRightOf="@+id/posterIV"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movieNameTV"
            android:layout_toEndOf="@+id/posterIV"
            android:layout_toRightOf="@+id/posterIV"
            android:text="Released on  : " />

        <RatingBar
            android:id="@+id/ratingsRB"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.01"
            android:layout_below="@+id/releasedateTV"
            android:layout_toEndOf="@id/textView4"
            android:layout_toRightOf="@+id/textView4" />
    </RelativeLayout>



</android.support.v7.widget.CardView>