<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/umlSomeid"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/umlVotesTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/umlStarIconIV"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_below="@id/umlTextView2"
            android:layout_toEndOf="@+id/umlStarIconIV"
            android:layout_toRightOf="@+id/umlStarIconIV"
            android:text="(0.0/100) voted by 1542, users " />

        <ImageView
            android:id="@+id/umlPosterIV"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/umlTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/umlTextView2"
            android:layout_toEndOf="@+id/umlPosterIV"
            android:layout_toRightOf="@+id/umlPosterIV"
            android:text="Popularity : " />

        <TextView
            android:id="@+id/umlReleasedateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/umlMovieNameTV"
            android:layout_toEndOf="@+id/umlTextView4"
            android:layout_toRightOf="@+id/umlTextView4"
            android:text="somedate date" />

        <TextView
            android:id="@+id/umlMovieNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/umlPosterIV"
            android:layout_toRightOf="@+id/umlPosterIV"
            android:text="movieAdapter @string/app_name" />

        <ImageView
            android:id="@+id/umlStarIconIV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/umlTextView4"
            android:layout_toEndOf="@+id/umlPosterIV"
            android:layout_toRightOf="@+id/umlPosterIV"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/umlTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/umlMovieNameTV"
            android:layout_toEndOf="@+id/umlPosterIV"
            android:layout_toRightOf="@+id/umlPosterIV"
            android:text="Released on  : " />

        <RatingBar
            android:id="@+id/umlRatingsRB"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.01"
            android:layout_below="@+id/umlReleasedateTV"
            android:layout_toEndOf="@id/umlTextView4"
            android:layout_toRightOf="@+id/umlTextView4" />
    </RelativeLayout>



</android.support.v7.widget.CardView>